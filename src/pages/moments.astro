---
import BaseLayout from '../layouts/BaseLayout.astro';

const moments = [
  {
    content: "优化了昼夜切换！眼睛更舒服了",
    date: "2025-04-29",
    mood: "🤠",
    tags: ["开发日志"]
  },
  {
    content: "今天博客基本内容开发完成了！芜湖",
    date: "2025-04-28",
    mood: "😎",
    tags: ["开发日志"]
  }
];
---

<BaseLayout title="说说">
  <main class="max-w-4xl mx-auto px-4 py-12">
    <h1 class="text-3xl font-serif mb-8">💬 闲言碎语</h1>
    
    <div class="waterfall">
      {moments.map(moment => (
        <div class="card break-inside-avoid mb-6">
          <div class="flex items-start gap-3">
            <span class="text-2xl">{moment.mood}</span>
            <div class="flex-1">
              <p class="mb-2 leading-relaxed">{moment.content}</p>
              <div class="flex items-center justify-between text-sm text-secondary">
                <time>{moment.date}</time>
                <div class="flex gap-2">
                  {moment.tags.map(tag => (
                    <span class="px-2 py-1 bg-accent/10 text-accent rounded-full">
                      #{tag}
                    </span>
                  ))}
                </div>
              </div>
            </div>
          </div>
        </div>
      ))}
    </div>
  </main>
</BaseLayout>
