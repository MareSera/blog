---
import BaseLayout from '../layouts/BaseLayout.astro';

const friends = [
  {
    name: "MareSera",
    avatar: "https://www.maresera.top/img/tx.png",
    url: "https://www.maresera.top/",
    desc: "我的个人主页",
    tags: ["我"]
  },
  {
    name: "SunMaple",
    avatar: "https://avatars.githubusercontent.com/u/121652165?v=4",
    url: "https://www.saroprock.com/",
    desc: "意识到会不说再见地离别， 才学会珍惜生命的每一天。",
    tags: ["网友"]
  }
];
---

<BaseLayout title="友链">
  <main class="max-w-4xl mx-auto px-4 py-12">
    <h1 class="text-3xl font-serif mb-8">✨ 四海友邻</h1>

      <div class="grid md:grid-cols-2 gap-6">
        {friends.map(friend => (
          <a href={friend.url} target="_blank" class="card group">
            <div class="flex items-start gap-4">
              <img src={friend.avatar} 
                  class="w-16 h-16 rounded-full border-2 border-accent/20"
                  alt={friend.name} />
              <div>
                <h2 class="text-xl font-medium group-hover:text-accent transition-colors">
                  {friend.name}
                </h2>
                <p class="text-secondary mt-2">{friend.desc}</p>
                <div class="mt-3 flex gap-2 flex-wrap">
                  {friend.tags.map(tag => (
                    <span class="px-2 py-1 bg-accent/10 text-accent rounded-full text-sm">
                      #{tag}
                    </span>
                  ))}
                </div>
              </div>
            </div>
          </a>
        ))}
      </div>

  </br>
    
    <!-- 联系表单 -->
    <div class="card text-center">
      <h2 class="text-3xl font-serif mb-4">📮 鸿雁传书</h2>
      <p class="text-secondary mb-6">申请友链请发送邮件（名称、头像、网址、简介）</p>
      <a 
        href="mailto:lyt15624134413@163.com"
        class="inline-flex items-center gap-2 px-8 py-3 bg-accent text-surface rounded-lg hover:bg-accent/90 transition-transform hover:scale-105"
      >
        <i class="iconfont icon-mail text-xl" />
        发送邮件
      </a>
    </div>
  </main>
</BaseLayout>
